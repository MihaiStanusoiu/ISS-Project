<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="topBarBorderPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="logoImageView" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="titleLabel" text="Comfery" />
         </children>
      </HBox>
   </left>
   <right>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="logInButton" mnemonicParsing="false" text="Log In" />
            <Button fx:id="signUpButton" mnemonicParsing="false" text="Sign Up" />
            <Label fx:id="nameLabel" opacity="0.0" />
            <Button fx:id="userProfileButton" mnemonicParsing="false">
               <graphic>
                  <ImageView fx:id="userProfileImageView" pickOnBounds="true" preserveRatio="true" />
               </graphic>
            </Button>
         </children>
      </HBox>
   </right>
</BorderPane>
